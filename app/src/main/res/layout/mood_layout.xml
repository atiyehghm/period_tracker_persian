<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/moods"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >
    <RelativeLayout
        android:id="@+id/mood1_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

        <ImageView
            android:id="@+id/mood1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/normal"
            />

        <TextView
            android:id="@+id/mood_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mood1"
            android:text="This is an image"
            android:textColor="#000000" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mood2_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:weightSum="8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mood2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/happy"
            />

        <TextView
            android:id="@+id/mood_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an image"
            android:layout_below="@+id/mood2"
            android:textColor="#000000" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mood3_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

        <ImageView
            android:id="@+id/mood3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/angry"
            />

        <TextView
            android:id="@+id/mood_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mood3"
            android:text="This is an image"
            android:textColor="#000000" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <ImageView
            android:id="@+id/mood4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sad"
            />

        <TextView
            android:id="@+id/mood_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an image"
            android:layout_below="@+id/mood4"
            android:textColor="#000000" />
    </RelativeLayout>

</LinearLayout>