<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorYellow</item>
        <item name="colorAccent">@color/colorPink</item>

        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorSwitchThumbNormal">@color/colorToolbar</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

</resources>